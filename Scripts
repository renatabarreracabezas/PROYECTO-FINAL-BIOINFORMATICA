sh -c "$(curl -fsSL https://ftp.ncbi.nlm.nih.gov/entrez/entrezdirect/install-edirect.sh)"

esearch -version

esearch -db nucleotide -query "Polylepis[Organism] AND rbcL[Gene] AND 500:3000[Sequence Length]" | \efetch -format uid > Polyelepis_rbcl_ids.txt

efetch -db nucleotide -id $(cat arecaceae_rbcl_ids.txt) -format fasta > Polylepis_rbcl.fasta

grep ">" Polylepis_rbcl.fasta

./muscle3.8.31_i86linux64 -in Polylepis_rbcl.fasta -out Polylepis_rbcl.fasta -maxiters 1 -diags

module load iqtree/2.2.2.6

iqtree2 -s Polylepis_rbcl.alineamiento.fasta
